                          <lb n="2"/><rs type="institution" subtype="board" role="decreer" key="kosmos" ref="#itanos"><w lemma="κόσμος">κόσμου</w></rs> <rs type="institution" subtype="object" role="decreeing" key="gnoma" ref="#itanos"><w lemma="γνώμα">γνώμα</w></rs>. <rs type="institution" subtype="practice" role="decreeing" key="dokeo" ref="#itanos"><w lemma="δοκέω">ἔδοξε</w></rs> <placeName ref="#itanos" type="ethnic">Ἰτανίων</placeName>
                          <lb n="3"/>τᾶι <rs type="institution" subtype="assembly" role="decreer" key="boule" ref="#itanos"><w lemma="βουλά">βουλᾶι</w></rs> καὶ τᾶι <rs type="institution" subtype="assembly" role="decreer" key="ekklesia" ref="#itanos"><w lemma="ἐκκλησία">ἐκκλησίαι</w></rs>·
                          <lb n="4"/>ἐπειδὴ <persName type="honoured" key="Patroklos f. Patron"><name nymRef="Πάτροκλος">Πάτροκλος</name> <name nymRef="Πάτρων" type="patronymic">Πάτρωνος</name>
                          <lb n="5"/><placeName ref="#macedonia" type="ethnic">Μακεδὼν</placeName></persName> <w lemma="ἀποστέλλω">ἀποσταλεὶς</w> ὑπὸ
