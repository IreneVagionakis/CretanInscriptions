                          <lb n="1"/><gap reason="lost" extent="unknown" unit="character"/><unclear>η</unclear>νίωι τὸν <w lemma="ἀδικέω">ἀδικίοντα</w> κ<unclear>α</unclear><gap reason="lost" extent="unknown" unit="character"/>
                          <lb n="2"/><gap reason="lost" extent="unknown" unit="character"/>καιρυ<unclear>θ</unclear>νιδονσι κημπαισ<gap reason="lost" extent="unknown" unit="character"/>
                          <lb n="3"/><gap reason="lost" extent="unknown" unit="character"/> <rs type="institution" subtype="official" role="judicial_procedure" key="neotas" ref="#gortyn"><w lemma="νεοτατεύω">νεοτατεύοντα</w></rs> μὴ εν<gap reason="lost" extent="unknown" unit="character"/>
