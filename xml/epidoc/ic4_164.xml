                          <lb n="5"/><gap reason="lost" extent="unknown" unit="character"/><orig><unclear>εν</unclear></orig><gap reason="lost" extent="unknown" unit="character"/><orig>θ</orig><gap reason="lost" extent="unknown" unit="character"/>
                          <lb n="5a"/><gap reason="lost" quantity="1" unit="line"/>
                          </ab>
