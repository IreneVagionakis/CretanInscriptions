                          <lb n="1"/><gap reason="lost" quantity="3" unit="character"/>ραῖοι</persName> <rs type="institution" subtype="assembly" role="decreer" key="polisE" ref="#phaistos"><placeName ref="#phaistos" type="ethnic">Φαισ<unclear>τί</unclear><supplied reason="lost">ων</supplied></placeName></rs>
                          <lb n="2"/><rs type="institution" subtype="social_status" role="granted_as_privilege" key="proxenos" ref="#phaistos"><w lemma="πρόξενος"><supplied reason="lost">πρό</supplied>ξενοι</w></rs> κ’ αὐτο<supplied reason="lost">ὶ</supplied>
