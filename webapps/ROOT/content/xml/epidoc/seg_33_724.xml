                            <bibl><ref target="#b461">Davaras – Masson 1983</ref>, pp. 396-397 n. 8</bibl> (= <bibl type="main_edition"><ref target="#bib5"><title>SEG</title></ref> 33.724 <ptr type="seg" target="a33_717_729"/></bibl>); 
                            <bibl type="indexed_edition"><ref target="#bib13">Bile</ref> 94</bibl>;
