                        <ab>
                          <lb n="1"/><gap reason="lost" extent="unknown" unit="character"/>ς, ὦ <unclear>πα</unclear><supplied reason="lost">ροδῖτα</supplied>,
                          <lb n="2"/><gap reason="lost" extent="unknown" unit="character"/> την ἀγλα<supplied reason="lost">ϊ</supplied><gap reason="lost" extent="unknown" unit="character"/>
                          <lb n="3"/><gap reason="lost" extent="unknown" unit="character"/> <supplied reason="lost">Κλ</supplied>αυδαίοισι <gap reason="lost" extent="unknown" unit="character"/>
                          <lb n="4"/><supplied reason="lost">ἐν δὲ</supplied> <w lemma="πάτρα">πάτραι</w> θραφθὶ<supplied reason="lost">ς</supplied> <gap reason="lost" extent="unknown" unit="character"/>
                          <lb n="5"/><supplied reason="lost">ἶδος δ’</supplied> ἰσοφ<corr>ά</corr>ρι<unclear>ξ</unclear>εν ἑκηβόλ<supplied reason="lost">ῳ <persName type="divine" key="Apollo">Ἀπόλλωνι</persName></supplied>.
                          <lb n="6"/><unclear>ἀ</unclear>νθ’ ὧ<unclear>ν</unclear> ἀλλ<supplied reason="lost">οί</supplied>ους ἦλθεν ὑ<supplied reason="lost">πὸ <w lemma="στέφανος">στεφάνους</w></supplied>·
                          <lb n="7"/><supplied reason="lost">καὶ δὲ</supplied> <rs type="institution" subtype="assembly" role="builder" key="polisE" ref="#itanos"><w lemma="πατρίς">πατρὶς</w></rs> μὲν <w lemma="ἀνατίθημι">ἀνέστ<supplied reason="lost">ησεν</supplied></w> <supplied reason="lost">νῦν <w lemma="εἰκών">εἰκόνα</w> τήνδε</supplied>
                          <lb n="8"/><supplied reason="lost">ἱ</supplied><unclear>ρ</unclear>εύουσα, ἐχάρη <supplied reason="lost">δ’</supplied> <gap reason="lost" extent="unknown" unit="character"/><supplied reason="lost">οιο δόμος</supplied>.
                          </ab>
