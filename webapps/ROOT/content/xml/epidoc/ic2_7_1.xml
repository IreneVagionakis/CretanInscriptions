                        <ab>
                          <lb n="1"/><persName type="divine" key="Zeus Kaudios"><unclear>Δ</unclear>ὶ <placeName ref="#kaudos" type="ethnic">Κα<unclear>υ</unclear>δίοι</placeName></persName> <orig>ε<unclear>γ</unclear></orig>
                          <lb n="2"/><gap reason="lost" extent="unknown" unit="character"/><gap reason="illegible" quantity="1" unit="character"/><orig>ι<unclear>λ</unclear>ε</orig>
                          <lb n="2a"/><gap reason="lost" quantity="1" unit="line"/>
                          </ab>
