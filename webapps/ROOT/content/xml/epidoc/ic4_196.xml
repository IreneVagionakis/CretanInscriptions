                          <lb n="1"/><rs type="institution" subtype="object" role="decreeing" key="dogma" ref="#gortyn"><w lemma="δόγμα">δόγματα</w></rs> <placeName ref="#crete" type="ethnic">Κρητ<supplied reason="lost">ῶν</supplied></placeName>
                          <lb n="2"/><placeName ref="#gortyn" type="ethnic">Γορτυνί<supplied reason="lost">ων</supplied></placeName>.
                          <lb n="3"/><rs type="institution" subtype="tribe" role="eponym" key="Ainaones" ref="#gortyn"><supplied reason="lost">ἐπὶ τῶν</supplied> <w lemma="Αἰνάωνες"><supplied reason="lost">Αἰ</supplied><unclear>να</unclear>ώνων</w></rs> <rs type="institution" subtype="board" role="eponym" key="kosmos" ref="#gortyn"><w lemma="κορμέω">κορμιόντων</w></rs> <placeName ref="#gortyn">Γορ<unclear>τ</unclear><supplied reason="lost">υν</supplied></placeName><gap reason="lost" extent="unknown" unit="character"/>
                          <lb n="4"/><gap reason="lost" extent="unknown" unit="character"/> <supplied reason="lost">δευτέ</supplied><unclear>ρα</unclear>ι ψίνοντος ἀπο<gap reason="lost" extent="unknown" unit="character"/>
                          <lb n="5"/><gap reason="lost" quantity="1" unit="line"/>
                          </ab>
