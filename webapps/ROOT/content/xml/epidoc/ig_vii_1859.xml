                        <ab>
                          <lb n="1"/>ἐν <placeName ref="#gortyn">Γόρτυν<supplied reason="lost">ι</supplied></placeName>
                          <lb n="2"/><rs type="institution" subtype="assembly" role="dedicant" key="koinon_ton_Kretaieon" ref="#koinon_kretaieon"><w lemma="κοινόν">κοινὸν</w> <placeName ref="#crete" type="ethnic"><supplied reason="lost">Κρηταιέων</supplied></placeName></rs>
