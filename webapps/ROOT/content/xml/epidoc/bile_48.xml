                        <div type="textpart" subtype="part" n="B">
                        <ab>
                            <lb n="6"/>καὶ <rs type="institution" subtype="board" role="incumbent" key="kosmos" ref="#dreros"><persName type="attested" key="Pyros"><name nymRef="Πύρος">Πύρου</name></persName></rs>,
